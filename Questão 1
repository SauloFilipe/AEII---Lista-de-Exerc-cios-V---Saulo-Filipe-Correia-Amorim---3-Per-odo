#include <stdio.h>
#include <stdlib.h>

float calcularMedia(int array[], int tamanho) {
  int soma = 0;

  for (int i = 0; i < tamanho; i++) {
    soma += array[i];
  }

  float media = (float) soma / tamanho;
  return media;
}

int main() {
  int tamanho;

  printf("Informe a quantidade de elementos do array: ");
  scanf("%d", &tamanho);

  int array[tamanho];

  srand(time(NULL));

  for (int i = 0; i < tamanho; i++) {
    array[i] = rand() % 100;
  }

  float media = calcularMedia(array, tamanho);

  printf("A media dos elementos do array Ã©: %.2f\n", media);

  return 0;
}
